<div id="edit-post-card" class="card">
    <input id="id-grab"type="text" style="display:none;" value="{{post.id}}">
    <form id="edit-post-form">
        <div class="field card-header">
            <label class="label card-header-title">Edit Post</label>
        </div>
        <div class="control">
            <input id='edit-post-title' class="input" type="text" placeholder="Title" value="{{post.title}}">
        </div>

        <div class="field card-content">
        <label class="label">Post</label>
        <div class="control">
            <textarea id="edit-post-body" class="textarea is-info" placeholder="...">{{post.post_body}}</textarea>
        </div>
        </div>

        <div class="field is-grouped">
        <div class="control">
            <button type="submit" class="button is-link">Submit Edit</button>
        </div>
        <div class="control">
            <button id="delete-button" class="button is-link has-background-danger">Delete</button>
        </div>
        <div class="control">
            <button class="button is-link is-light"><a href="/dashboard">Cancel</a></button>
        </div>
        </div>
    </form>
</div>
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
