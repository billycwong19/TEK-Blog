<div id="comment-box">
{{#each comments as | comment |}}
<div id="comment-content" class="box has-background-white">
  <article class="media">
    <div class="media-left">
        <span class="icon is-small has-text-warning">
        <i class="fa-solid fa-comment"></i>
        </span>
    </div>
    <div class="media-content">
      <div id="post-data-box"class="content">
          <p>
            <strong>
              <p class="has-text-dark title is-5">
              {{ comment.comment_body }}
              </p>
          </p>
      
            </strong>
            <small class="has-text-dark"> by <a href="" class="has-text-dark subtitle is-6">{{ comment.user.username }}</a>
            </small> 
            <small class="has-text-dark">{{format_date comment.createdAt}}</small>
            <br>
            </p>
      </div>

      {{!-- <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item" aria-label="reply">
            <span class="icon is-small has-text-warning">
              <i class="fa-solid fa-comment fa-lg"></i>
            </span>
          </a>
        </div>
      </nav> --}}
    </div>
  </article>
</div>
{{/each}}
</div>

